{% extends 'baseRecruteur.html.twig' %}

{% block title %}Hello SecurityRecruteurController!{% endblock %}

{% block body %}

<div class="container">
    <h1>Connexion </h1>
    
    <form action="{{path('app_loginRecruteur')}}" method="post">
        <div class="form-group m-2">
            <input placeholder="e-mail" required name="_username" type="text" class="form-control">
        </div>
        <div class="form-group m-2">
            <input placeholder="mot de passe" required name="_password" type="password" class="form-control">
        </div>
        <div class="form-group m-2">
           <button class="btn btn-primary" type="submit">connecter</button>
        </div>
    </form>

</div>
{% endblock %}
